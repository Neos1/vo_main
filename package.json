  "name": "voter",
  "version": "1.0.0",
  "description": "",
  "main": "electron.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "electron-build": "set DEV=false&&electron-builder "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Neos1/vo_temp.git"
  },
  "author": {
    "name": "Pavel Kakhanov",
    "email": "pavkahanov@neos1.com"
