  },
  "homepage": "https://github.com/Neos1/vo_temp#readme",
  "devDependencies": {
    "electron": "^3.0.11",
    "electron-builder": "^20.38.3"
  },
  "build": {
    "files": [
      "build/ballot/**/*",
      "src/wallets/**/*",
      "src/contracts/**/*",
      "src/config.json",
      "electron.js"
    ],
    "win": {
      "target": [
        "portable"
      ]
    },
    "linux": {
      "target": "deb"
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "warningsAsErrors": false
    },
    "portable": {
      "artifactName": "voter_portable--win.exe"
    },
    "compression": "store",
    "asar": false
  },
  "dependencies": {
    "electron-localshortcut": "^3.1.0"
  }
}